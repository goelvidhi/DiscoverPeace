<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
android:layout_marginTop="40dip" android:textColor="@color/brickred" android:typeface="serif" 
android:id="@+id/first_page_heading" android:text="EULA customized" 
android:gravity="center_horizontal" android:layout_gravity="center_horizontal" 
android:textSize="35dip"/>

<TextView android:text="@string/first_page_description" 
android:id="@+id/first_page_description" android:layout_width="wrap_content" 
android:layout_height="wrap_content" android:layout_margin="25dip" android:textSize="22dip" 
android:textColor="@color/white" android:textColorHighlight="@color/grey"></TextView>
   
</LinearLayout>